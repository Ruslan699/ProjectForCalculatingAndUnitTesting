@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Client</label>
                <div class="col-sm-10">
                    <select class="form-control">
                        <option>Ruslan</option>
                        <option>Tural</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPhone" class="col-sm-2 control-label">Telephone number</label>
                <div class="col-sm-10">
                    <input type="tel" class="form-control" id="inputPhone" name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputLoanAmount" class="col-sm-2 control-label">Loan Amount</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputLoanAmount">
                </div>
            </div>
            <div class="form-group">
                <label for="inputLoanPeriod" class="col-sm-2 control-label">Loan Periods</label>
                <div class="col-sm-10">
                    <select class="form-control" id="inputLoanPeriod">
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputMonthlyRate" class="col-sm-2 control-label">Monthly interest rate</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputMonthlyRate" name="monthlyRate">
                </div>
            </div>
            <div class="form-group">
                <label for="inputpayoutDate" class="col-sm-2 control-label">Payout date</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputpayoutDate" name="payoutDate">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Sign in</button>
                </div>
            </div>
        </form>
    </div>
</div>

